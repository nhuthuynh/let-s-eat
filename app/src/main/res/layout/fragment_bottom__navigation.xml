<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="au.edu.csu.itc209.letseat.fragments.Bottom_Navigation_Fragment">

    <android.support.design.widget.BottomNavigationView
        android:background="@drawable/bottom_nav_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        android:paddingTop="2dp"
        app:itemBackground="@color/backgroundColorPrimary"
        app:itemIconTint="@color/bottom_navigation_item_colors"
        app:itemTextColor="@color/bottom_navigation_item_colors"
        app:menu="@menu/bottom_navigation_main"
        android:layout_alignParentBottom="true">
    </android.support.design.widget.BottomNavigationView>

</FrameLayout>
